<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <!--
        Added the entity Branch.
    -->
    <changeSet id="20200119190519-1" author="jhipster">
        <createTable tableName="branch">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="branch_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="address" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="pin_code" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="branch_head" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="cell_phone_no" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="land_line_phone_no" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="email_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="fax_no" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="is_main_branch" type="varchar(3)">
                <constraints nullable="true" />
            </column>

            <column name="start_date" type="date">
                <constraints nullable="true" />
            </column>

            <column name="created_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="created_on" type="date">
                <constraints nullable="true" />
            </column>

            <column name="updated_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="updated_on" type="date">
                <constraints nullable="true" />
            </column>

            <column name="status" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="college_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="city_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="state_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>

</databaseChangeLog>
